<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#18181B">

    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Text="{Binding QuartoSelecionado.Descricao}"
               FontSize="36"
               TextColor="#C084FC"
               FontFamily="PoppinsRegular"
               HorizontalTextAlignment="Center"/>

        <Frame Margin="10" BackgroundColor="#18181B">
            <StackLayout  Orientation="Horizontal" >
                <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text="Adultos: "
                        TextColor="#F4F4F5"
                        FontFamily="PoppinsRegular" />
                    <Label Text="{Binding QntAdultos}" 
                           TextColor="#C084FC"
                           FontFamily="PoppinsRegular" />
                </HorizontalStackLayout>

                <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text="CrianÃ§as: "
                        TextColor="#F4F4F5"
                        FontFamily="PoppinsRegular" />
                    <Label Text="{Binding QntCriancas}" 
                           TextColor="#C084FC"
                           FontFamily="PoppinsRegular" />
                </HorizontalStackLayout>
            </StackLayout>
        </Frame>

        <Frame Margin="10" BackgroundColor="#3F3F46">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0"
                    Text="Check-in:"
                    TextColor="#F4F4F5"
                    FontFamily="PoppinsRegular" />
                <Label Grid.Row="0" Grid.Column="1"
                    Text="Check-out:"
                    TextColor="#F4F4F5"
                    FontFamily="PoppinsRegular" />
                <Label Grid.Row="0" Grid.Column="2"
                    Text="Estadia:"
                    TextColor="#F4F4F5"
                    FontFamily="PoppinsRegular" />

                <Label Grid.Row="1" Grid.Column="0" 
                       Text="{Binding DataCheckIn, StringFormat='{}{0:dd/MM/yyyy}'}"
                       TextColor="#C084FC"
                       FontFamily="PoppinsRegular" />

                <Label Grid.Row="1" Grid.Column="1" 
                       Text="{Binding DataCheckOut, StringFormat='{}{0:dd/MM/yyyy}'}"
                       TextColor="#C084FC"
                       FontFamily="PoppinsRegular" />

                <Label Grid.Row="1" Grid.Column="2" 
                       Text="{Binding Estadia}"
                       TextColor="#C084FC"
                       FontFamily="PoppinsRegular"/>
            </Grid>
        </Frame>

        <Frame Margin="10" BackgroundColor="#3F3F46">
            <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                <Label Text="Valor Total: "
                    TextColor="#F4F4F5"
                    FontFamily="PoppinsRegular" />
                <Label Text="{Binding ValorTotal, StringFormat='{}{0:c}'} "
                       TextColor="#C084FC"
                       FontFamily="PoppinsRegular" />
            </HorizontalStackLayout>
        </Frame>

        <Button Text="Voltar"
                HorizontalOptions="Center"
                Clicked="Button_Clicked"
                BackgroundColor="#A78BFA" />

    </VerticalStackLayout>
</ContentPage>